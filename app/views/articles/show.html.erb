<div class="container py-4" style="max-width: 980px;">
  <% if notice.present? %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="d-flex justify-content-between align-items-start mb-3">
    <div>
      <h1 class="mb-1"><%= @article.title %></h1>
      <div class="text-muted">Last update: <%= @article.updated_at.strftime("%d %b %Y, %H:%M") %></div>
    </div>

    <div class="d-flex gap-2">
      <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-secondary" %>
      <%= link_to "Delete",
                  article_path(@article),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "btn btn-outline-danger" %>
    </div>
  </div>
  <div class="container py-4 war-rig" style="max-width: 980px;">
  </div>
  <div class="card">
    <div class="card-body">
      <%= simple_format(@article.content) %>
    </div>
  </div>

  <%= link_to "â† Back", articles_path, class: "btn btn-link mt-3" %>
</div>
